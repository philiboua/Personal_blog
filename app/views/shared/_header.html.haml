              .navbar-header
                %button.navbar-toggle{"data-target" => "#navbarCollapse", "data-toggle" => "collapse", :type => "button"}
                  %span.sr-only Toggle navigation
                  %span.icon-bar
                  %span.icon-bar
                  %span.icon-bar
                %a.navbar-brand
                  = image_tag("logo.jpg", style: 'width: 60px; height: 50px;')
              #navbarCollapse.collapse.navbar-collapse
                %ul.nav.navbar-nav
                  %li
                    = link_to "BLOG", class: ''
                  %li
                    = link_to "ABOUT", class: ''
                  %li
                    = link_to "PORTOFOLIO", class: ''
                  %li
                    = link_to "CONTACT", class: ''

                  %li
                    - if user_signed_in?
                      = link_to 'Log out', destroy_user_session_path, method: :delete
          .pcMenuWp
            .pcMenuLogo.pull-left
              = link_to "/" do 
                = image_tag('logo.jpg', class: 'logoStyles')
            .pcMenu.pull-right
              %ul
                %li
                  = link_to "BLOG", posts_path, class: "cool-link #{active_link('')}"
                  
                %li
                  = link_to "ABOUT", home_resume_path, class: "cool-link #{active_link('')}"

                %li
                  = link_to "PORTOFOLIO", "#", class: "cool-link #{active_link('')}"
                  
                %li
                  = link_to "CONTACT", "https://philippeaka.typeform.com/to/AV9HXT", class: "cool-link #{active_link('')}"
      
