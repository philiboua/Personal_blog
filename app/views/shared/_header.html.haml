
.headerWp
  %Header
    .container
      .row
        .col-md-12
          .navigation-mobile-wrapper
            %nav.navbar.navbar-custom{:role => "navigation"}
              .navbar-header
                %button.navbar-toggle{"data-target" => "#navbarCollapse", "data-toggle" => "collapse", :type => "button"}
                  %span.sr-only Toggle navigation
                  %span.icon-bar
                  %span.icon-bar
                  %span.icon-bar
                %a.navbar-brand
                  = image_tag("logo.png", style: 'width: 60px; height: 50px; margin-top: 10px;')
              #navbarCollapse.collapse.navbar-collapse
                %ul.nav.navbar-nav
                  - if current_page?(root_path)
                    %li
                      = link_to "ABOUT", "#about", class: "button "
                    %li
                      = link_to "SKILLS", "#skill", class: "button "
                    %li
                      = link_to "WORK", "#work", class: "button"
                    %li
                      = link_to "BLOG", posts_path, class: ""
                    %li
                      = link_to "CONTACT", "#contact", class: "button"
                    - if user_signed_in?
                      %li
                        = link_to 'Log out', destroy_user_session_path, method: :delete
                  - else 
                    %li
                      = link_to "HOME", root_path, class: "button "
                    
          .pcMenuWp
            .pcMenuLogo.pull-left
              = link_to "/" do 
                = image_tag('logo.png', class: 'logoStyles')
            .pcMenu.pull-right
              - if current_page?(root_path)
                %ul
                  %li
                    = link_to "ABOUT", "#about", class: "scroll-top hvr-bob"
                  %li
                    = link_to "SKILLS", "#skill", class: " scroll-top hvr-bob"
                  %li
                    = link_to "WORK", "#work", class: " scroll-top hvr-bob"
                  %li
                    = link_to "BLOG", posts_path, class: "cool-link #{active_link('')} hvr-bob"
                    
                  %li
                    = link_to "CONTACT", "#contact", class: "cool-link hvr-bob"
              - else 
                %ul
                  %li
                    = link_to "HOME", root_path, class: "cool-link hvr-bob"
      
      - if (controller.controller_name == 'posts' && controller.action_name == 'index')
        .row 
          .col-md-8.col-xs-12.col-centered
            .titlePage.text-center
              %h4
                "Any sufficiently advanced <span>technology</span> is equivalent to magic."
                %br
                â€“ Arthur C. Clarke
      - elsif (controller.controller_name == 'posts' && controller.action_name == 'show')
        .row 
          .col-md-8.col-xs-12.col-centered
            .titlePage.text-center
              %h4
                = @post.title




          